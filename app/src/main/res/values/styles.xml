<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle">
        <item name="android:background">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="Widget.TeleFlow.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/card_color</item>
        <item name="boxStrokeColor">@color/nav_bar_border_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="startIconTint">@color/text_color</item>
        <item name="endIconTint">@color/text_color</item>
        <item name="errorIconTint">@color/logout_color</item>
        <item name="errorTextColor">@color/logout_color</item>
    </style>
    
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/nav_bar_color</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
    </style>
    
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/heading_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/logout_color</item>
    </style>
    
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color</item>
    </style>
    
    <style name="HelperTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
</resources> 