<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TeleFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- brand color -->
        <item name="colorPrimary">@color/active_color</item>
        <item name="colorPrimaryDark">@color/nav_bar_color</item>
        <item name="colorAccent">@color/active_color</item>
        
        <!-- window/background colors -->
        <item name="android:windowBackground">@color/background_color</item>
        
        <!-- text colors -->
        <item name="android:textColorPrimary">@color/heading_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        
        <!-- status bar color -->
        <item name="android:statusBarColor">@color/nav_bar_color</item>
        
        <!-- nav bar color -->
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
        
        <!-- action bar styling -->
        <item name="actionBarStyle">@style/TeleFlow.ActionBar</item>
        
        <!-- bottom nav styling -->
        <item name="bottomNavigationStyle">@style/TeleFlow.BottomNavigation</item>
    </style>
    
    <!-- action bar style -->
    <style name="TeleFlow.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/nav_bar_color</item>
        <item name="titleTextStyle">@style/TeleFlow.ActionBar.TitleTextStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>
    
    <style name="TeleFlow.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/heading_color</item>
    </style>
    
    <!-- bottom nav style -->
    <style name="TeleFlow.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/nav_bar_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>
    
    <style name="Theme.TeleFlow.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/active_color</item>
        <item name="colorPrimaryDark">@color/nav_bar_color</item>
        <item name="colorAccent">@color/active_color</item>
        
        <item name="android:windowBackground">@android:color/black</item>
        
        <item name="android:textColorPrimary">@color/heading_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        
        <item name="android:statusBarColor">@android:color/transparent</item>
        
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        
        <item name="actionBarSize">0dp</item>
    </style>

    <style name="Theme.TeleFlow.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/active_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/active_color</item>
        <item name="colorSecondaryVariant">@color/yellow_darker</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">0dp</item>
        
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        
        <item name="textInputStyle">@style/Widget.TeleFlow.TextInputLayout</item>
    </style>
</resources>